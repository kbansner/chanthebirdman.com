@import 'jeet'
$breakpoint-page = 1024px
$breakpoint-tablet = 768px
$breakpoint-phone = 640px

html {
  font-size: 16px;
  font-family: 'EB Garamond', Times, serif;
}

body {
  margin: 0;
  background-color white
  // background-color: #a0cef2;
}
header
  position: relative
  height: 100vh
  width: 100vw
  background-color: #000
  overflow: hidden

video {
  position: absolute;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  transform: translateX(-50%) translateY(-50%);
  background: url('../images/chans-angles-cover.jpg') no-repeat;
  background-size: cover;
  background-position: center;
  transition: 1s opacity;
  opacity: 1;
  z-index: 1;
  &.stop {
    opacity: 0;
  }
}
.stopfade {
   opacity: .5;
}

#message {
  // font-family: Agenda-Light, Agenda Light, Agenda, Arial Narrow, sans-serif;
  position: relative
  opacity: 0;
  font-weight: 100;
  background: rgba(0,0,0,0.3);
  color: white;
  padding: 2rem;
  width: 33%;
  margin: 2rem;
  border-radius: .5rem;
  float: right;
  font-size: 1.2rem;
  z-index: 50
  a {
    color: #fff;
    text-decoration: none;
  }
  &.show {
    transition: 2s opacity linear;
    opacity: 1;
  }
}

h1 {
  font-size: 2.3rem;
  margin-top: 0;
}
#message button {
  display: block;
  width: 80%;
  padding: .4rem;
  border: none;
  margin: 1rem auto;
  font-size: 1.3rem;
  font-family: Agenda-Light, Agenda Light, Agenda, Arial Narrow, sans-serif;
  background: rgba(255,255,255,0.23);
  color: #fff;
  border-radius: 3px;
  cursor: pointer;
  transition: .3s background;
}
#message button:hover {
   background: rgba(0,0,0,0.5);
}


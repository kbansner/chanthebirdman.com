$breakpoint-page = 1024px
$breakpoint-tablet = 768px
$breakpoint-phone = 640px

html
  font-size 62.5%
  line-height 1.4
  font-family Arial, sans-serif

body
  // margin 0
  background-color white

#viewport
  position: fixed
  height: 100vh
  width: 100vw
  background-color: #000
  overflow: hidden
  background: url('../images/chans-angles-cover.jpg') no-repeat
  background-size: cover
  background-position: center
  overflow hidden
  // overflow-y auto

video
  position: absolute
  top: 50%
  left: 50%
  min-width 100%
  min-height 100%
  width auto
  height auto
  transform translateX(-50%) translateY(-50%)
  transition 1s opacity
  opacity 1
  z-index 1
  &.stop
    opacity 0

.stopfade
  opacity .5

h1
  margin-top 1.5rem
  font-family: Arial Narrow, Arial, sans-serif
  font-size 2rem
  font-weight: 400

p
  font-size 1.5rem

.button, button
  display block
  width 100%
  padding .4rem
  border none
  margin 1rem auto
  font-size 1.5rem
  font-weight 600
  line-height 3rem
  font-family Arial, sans-serif
  letter-spacing .5px
  background #007AFF
  color #fff
  text-align center
  border-radius 8px
  cursor pointer
  text-decoration none
  transition .3s background
  &:hover
    background rgba(0,0,0,0.5)

$mainHeight = 100vh

.draw
  position absolute
  bottom 12rem
  height $mainHeight
  background-color rgba(255,255,255,0.8)
  transform translateY($mainHeight)
  transition transform 500ms ease-out
  border-radius 16px 16px 0 0
  z-index 50
  box-shadow 0 -3px 25px rgba(0,0,0,0.3)

  &.open
    border-radius 0
    background-color rgba(255,255,255,1)
    // transform translateY(6rem)
    #videoButton
      display: none

    .cancel
      transform rotate(180deg)

  .draw-inner
    box-sizing: border-box
    display block
    padding 1rem 2rem
    height: $mainHeight
    overflow-y auto

  .draw-opener
    position absolute
    top 0
    left 0
    width 100%
    height 2rem

    .cancel
      width 5rem
      height 1rem
      position absolute
      top 1rem
      left calc(50% - 2.5rem)
      font-size 0
      cursor pointer
      opacity 0.5
      transition opacity 250ms ease-out

      &:hover
        opacity 1

      &::before
      &::after
        content ""
        width 2.5rem
        border-top 3px solid #666
        position absolute
        top 0
        left 50%
        border-radius 3px
        transform-origin left center

      &::before
        transform translateX(-1px) rotate(20deg)

      &::after
        transform translateX(1px) rotate(160deg)

/** Base Styles **/
*
*::before
*::after
    margin 0
    padding 0
    box-sizing border-box

html
  font-size 62.5%
  line-height 1.4

body
  font-family "Proxima Nova", "Myriad Pro", sans-serif
  letter-spacing -0.21px
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

h1
  margin 1vw 0 5vw
  font-size 5.5vw
  font-weight normal
  line-height 1.4
  text-align center
  color #333
p
  margin 0 0 0.6rem
  font-size 1.4rem
  font-size 3.8vw
  color #666

a.button
  display inline-block
  padding 0 2rem
  min-width 25vw
  color white
  line-height 7.6vw
  text-align center
  font-size 3.4vw
  font-weight 600
  font-family -apple-system, BlinkMacSystemFont, sans-serif
  text-decoration none
  background-color #007AFF
  border-radius 1.5vw
  letter-spacing -0.5px
  & + .button
    float right

footer
  margin 3% 6.5%

.info
  margin 0 6.5%

#play
  position absolute
  top -16vw
  width 16vw
  height 16vw
  left 42vw
  box-shadow 0 0.9rem 3.2rem rgba(40, 43, 41, 0.56)
  cursor pointer
  z-index 2
  transition opacity 200ms ease-out, transform 200ms ease-out
  transform scale(1)
  will-change opacity, transform
  background-color black
  color white
  font-size 3.5vw
  font-weight bold
  text-indent -300px
  &:hover
  &:focus
      background-color lighten(#1e1f22, 5%)

  &:active
      background-color darken(#1e1f22, 5%)
      transition none
  &.hide
    opacity 0
    transform scale(0.6)

.first-half
.second-half
  position absolute
  top 30%
  width 25%
  height 40%
  background-color white
  transition all 500ms cubic-bezier(0.445, 0.050, 0.550, 0.950)

.first-half
	left 25%
	clip-path polygon(50% 0%, 100% 20%, 100% 80%, 50% 100%)

.second-half
	right 25%
	clip-path polygon(0 20%, 70% 50%, 70% 50%, 0 80%)

.paused .first-half, .paused .second-half
	clip-path polygon(21% 0, 73% 0, 73% 100%, 21% 100%)

video
  position: absolute
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  width auto
  height auto
  transform translateX(-50%) translateY(-50%)
  transition 1s opacity
  opacity 1
  z-index -1
  object-fit cover
  &.stop
    opacity 0

.screen
  background-color #629eda
  background-position center
  background-size cover
  background-repeat no-repeat
  z-index: -10


// Desktop Layout
@media(min-width: 600px)
  #viewport, .screen
    position fixed
    width 100%
    height 100%

  .screen
    background-image url(../images/chans-angles-cover-desktop.jpg)

  .drawer
    position absolute
    top 0
    right 4%
    margin-top 4%
    background rgba(0,0,0,0.3)
    color white
    padding 1%
    width 35%

    h1
      margin 1vw 0 6vw
      font-size 2.1vw
      color white
      line-height 1.3
    p
      margin 0 0 0.6rem
      font-size 1.1vw
      color white

  #play
    top 8.8vw
    width 4.6vw
    height 4.6vw
    left 50%
    transform translateX(-2.3vw)

  footer
    margin 3% 6.5%

  a.button
    padding 0 2rem
    min-width 33%
    line-height 2.6vw
    font-size 1.3vw
    background-color #007AFF
    border-radius 0.6rem
    letter-spacing 0

// Vertical Phone Layout
// @media screen and (max-device-width: 799px)
@media screen and (max-width: 599px)
  .viewport
    position fixed
    height 100vh
    width 100vw
    overflow hidden

    &::before
    &::after
        content ""
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        border-radius 0.5rem

    &::before
        background-color darken(#629eda, 30%)
        clip-path polygon(0 57%, 100% 67%, 100% 100%, 0% 100%)
        mix-blend-mode overlay
        opacity 0.4

    &::after
        background-color #333
        clip-path polygon(0 64%, 100% 74%, 100% 100%, 0% 100%)
        mix-blend-mode soft-light
        opacity 0.4

  .screen
    position absolute
    width 100%
    height 80%
    background-image url(../images/chans-angles-cover-mobile.jpg)

  video
    min-width 0
    min-height 0
    width auto
    height 100%

  .drawer
    position absolute
    top 74vh
    width 100%
    background-color #fff
    z-index 1

    &::before
      content ""
      height 8%
      position absolute
      left -1px
      right 0
      top -7.9%
      background-color #fff
      clip-path polygon(0 100%, 100% 0, 100% 100%)

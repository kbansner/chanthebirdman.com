@import 'jeet'
$breakpoint-page = 1024px
$breakpoint-tablet = 768px
$breakpoint-phone = 640px

html {
  font-size: 16px;
  font-family: 'EB Garamond', Times, serif;
}

body {
  margin: 0;
  background: #000;
}
header
  position: relative
  height: 100vh
  width: 100vw

video {
  position: fixed;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  z-index: -100;
  transform: translateX(-50%) translateY(-50%);
  // background: url('//demosthenes.info/assets/images/polina.jpg') no-repeat;
  background: url('/images/chans-angles-cover.jpg') no-repeat;
  background-size: cover;
  transition: 1s opacity;
}
.stopfade {
   opacity: .5;
}

#message {
  // font-family: Agenda-Light, Agenda Light, Agenda, Arial Narrow, sans-serif;
  font-weight: 100;
  background: rgba(0,0,0,0.3);
  color: white;
  padding: 2rem;
  width: 33%;
  margin: 2rem;
  float: right;
  font-size: 1.2rem;
  @media(max-width: $breakpoint-phone) {
    margin: 7rem 2rem 2rem
    width: auto;
    font-size: 1rem;
  }
}

h1 {
  font-size: 2.5rem;
  // text-transform: uppercase;
  margin-top: 0;
  // letter-spacing: .3rem;
}
#message button {
  display: block;
  width: 80%;
  padding: .4rem;
  border: none;
  margin: 1rem auto;
  font-size: 1.3rem;
  font-family: Agenda-Light, Agenda Light, Agenda, Arial Narrow, sans-serif;
  background: rgba(255,255,255,0.23);
  color: #fff;
  border-radius: 3px;
  cursor: pointer;
  transition: .3s background;
}
#message button:hover {
   background: rgba(0,0,0,0.5);
}

a {
  display: inline-block;
  color: #fff;
  text-decoration: none;
  background:rgba(0,0,0,0.5);
  padding: .5rem;
  transition: .6s background;
}
a:hover{
  background:rgba(0,0,0,0.9);
}
@media screen and (max-width: 500px) {
  div{ width:70%; }
}
@media screen and (max-device-width: 800px) {
  // html { background: url(https://thenewcode.com/assets/images/polina.jpg) #000 no-repeat center center fixed; }
  #bgvid { display: none; }
}


// Hamburger
.menu {
  transition: 0.1s transform linear;
  position: fixed;
  background: 0;
  float: left;
  margin: 2rem 1.5rem;
  height: 1.5rem;
  width: 2.6rem;
  z-index: 1;
  outline: 0;
  padding: 0;
  border: 0;
  opacity: 0.5;
  transition: 0.1s opacity linear
  &:hover {
    opacity: 1;
  }
  &.active {
    opacity: 1;
  }
}

.bar {
  &, &::before, &::after {
    transition: 0.2s background linear 0.1s, 0.2s top linear 0.2s, 0.2s transform linear;
    position: absolute;
    background: #fff;
    margin: auto;
    width: 100%;
    height: 0.3rem;
    content: '';
    top: 50%;
    left: 0;
  }

  & {
    margin-top: -0.2rem
  }

  &::before {
    top: -1rem;
  }

  &::after {
    top: 1rem;
  }

  &::before,
  &::after {
    transform: rotate(0deg);
  }

  .active & {
    background: 0;

    &::before {
      transform: rotate(45deg);
    }

    &::after {
      transform: rotate(-45deg);
    }

    &::before,
    &::after {
      top: 0;
    }

    &,
    &::before,
    &::after {
      transition: 0.2s background linear 0.1s, 0.2s top linear, 0.2s transform linear 0.2s;
    }
  }
}

nav {
  width: 11rem;
  height: 100%;
  background: rgba(0,0,0,0.85);
  position: fixed;
  transform: translateX(-250px);
  transition: transform 0.6s cubic-bezier(.56,.1,.34,.91);
  padding-top: 6.2rem;
  font-family: Agenda-Light, Agenda Light, Agenda, Arial Narrow, sans-serif;
  color: white;

  .menu-open & {
    transform: translateX(0);
  }

  ul {
    margin: 0;
    list-style: none;
    padding: 0;

    li {
      padding: 1.5rem;
      font-size: 1.3rem;

      &:hover {
        background: rgba(0,0,0,0.5);
      }
    }
  }
}

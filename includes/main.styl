$skyblue = #629eda
*
*::before
*::after
    margin 0
    padding 0
    box-sizing border-box

html
  font-size 62.5%
  line-height 1.4

body
  font-family "Proxima Nova", "Myriad Pro", sans-serif
  letter-spacing -0.21px
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

h1
  margin 1vmin 0 5vmin
  font-size 5.5vw
  font-weight normal
  line-height 1.4
  text-align center
  color #333
h2
  font-size clamp(1.6rem, 4vw, 2.2rem)
  margin-top 2em
  font-weight bold
  // margin-bottom 1.5em
p
dl
ul
  margin 0 0 2vmin
  font-size 1.4rem
  font-size clamp(1.4rem, 1.3vw, 2rem)
  color #666

dl
  dt
    margin-top 1.2em
    font-weight bold
  dd
    margin-top .2em
  dd + dd
    margin-top 1.2em

ul
  padding .7em 2em 1em

a
a:visited
  color white

a.button
  display inline-block
  padding 0 2rem
  min-width 25vmin
  line-height 7.6vmin
  color white !important
  text-align center
  font-size 3.4vmin
  font-weight 600
  font-family -apple-system, BlinkMacSystemFont, sans-serif
  text-decoration none
  background-color #007AFF
  border-radius 1.5vmin
  letter-spacing -0.5px
  & + .button
    float right
  &:hover
  &:focus
    background-color lighten(#007AFF, 5%)

  &:active
    background-color darken(#007AFF, 5%)
    transition none

footer
  margin 3% 6.5%

.info
  margin 0 6.5%

#play
  position absolute
  top -16vmin
  width 16vmin
  height 16vmin
  left 42vw
  box-shadow 0 0.9rem 3.2rem rgba(40, 43, 41, 0.56)
  cursor pointer
  z-index 2
  transition opacity 200ms ease-out, transform 200ms ease-out
  transform scale(1)
  will-change opacity, transform
  background-color black
  color white
  text-indent -300px
  &:hover
  &:focus
    background-color lighten(#1e1f22, 5%)

  &:active
    background-color darken(#1e1f22, 5%)
    transition none
  &.hide
    opacity 0
    transform scale(0.6)

.first-half
.second-half
  position absolute
  top 30%
  width 25%
  height 40%
  background-color white
  transition all 500ms cubic-bezier(0.445, 0.050, 0.550, 0.950)

.first-half
	left 25%
	clip-path polygon(50% 0%, 100% 20%, 100% 80%, 100% 80%, 50% 100%)

.second-half
	left calc(50% - 1px)
	clip-path polygon(0 20%, 1px 20%, 70% 50%, 1px 80%, 0 80%)

.playing .first-half, .playing .second-half
	clip-path polygon(21% 0, 73% 0, 73% 100%, 21% 100%, 21% 100%)

video
  position: relative
  width 100%
  height 100%
  transition 1s opacity
  opacity 1
  z-index -1
  object-fit cover
  &.stop
    opacity 0

.screen
  background-color $skyblue
  background-position center
  background-size cover
  background-repeat no-repeat
  z-index: -10


// Desktop Layout
@media(min-width: 800px)
  .screen
    position fixed
    width 100%
    height 100%
    background-image url(../images/chans-angles-cover-desktop.jpg)

  .drawer
    position absolute
    top 0
    right 3%
    margin-top 3%
    background rgba(0,0,0,0.3)
    color white
    padding 1%
    width 35%

    h1
      margin 1vw 0 6.8vw
      font-size 2.1vw
      color white
      line-height 1.3
    // h2
    //   font-size 1.2vw

    p
    dl
    ul
      margin-bottom 1rem
      // font-size .8vw
      color white

  #play
    top 8.8vw
    width 4.6vw
    height 4.6vw
    left 50%
    transform translateX(-2.3vw)

  footer
    margin 3% 6.5%

  a.button
    padding 0 2rem
    min-width 33%
    line-height 2.6vw
    font-size 1.3vw
    background-color #007AFF
    border-radius 0.6rem
    letter-spacing 0

// Vertical Phone Layout
// @media screen and (max-device-width: 799px)
@media screen and (max-width: 799px)
  .viewport
    position fixed
    height 100vh
    width 100vw
    background-color lighten($skyblue, 35%)
    overflow hidden

    &::before
    &::after
        content ""
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        border-radius 0.5rem

    &::before
        background-color darken($skyblue, 30%)
        clip-path polygon(0 57%, 100% 67%, 100% 100%, 0% 100%)
        mix-blend-mode overlay
        opacity 0.4

    &::after
        background-color #333
        clip-path polygon(0 64%, 100% 74%, 100% 100%, 0% 100%)
        mix-blend-mode soft-light
        opacity 0.4

  .screen
    position relative
    width 100%
    height 80%
    background-image url(../images/chans-angles-cover-mobile.jpg)

  .drawer
    position absolute
    top 75vh
    width 100%
    background-color #fff
    z-index 1

    &::before
      content ""
      height 8%
      position absolute
      left -1px
      right 0
      top -7.9%
      background-color #fff
      clip-path polygon(0 100%, 100% 0, 100% 100%)

  a
  a:visited
    color #444

  // Small Phone Horizontal Layout
  @media(orientation:landscape)
    .drawer
      top 55vh

    h1
      font-size 4vw
      line-height 1.2
    h2
      font-size 4vw

    // ul
    // dl
    // p
    //   font-size 1.5vw

    #play
      position absolute
      top -14vmin
      width 14vmin
      height 14vmin
      left 43vw

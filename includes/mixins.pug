mixin head(pageTitle)
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  block
  script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-131278402-1")
  script.
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-131278402-1');

  title="Chan the Bird Man | " + pageTitle

mixin main-js
  script(type='text/javascript')
    include main.js
